<Window x:Class="WpfApp1.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные автора" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">
        <TextBlock Text="Имя:"/>
        <TextBox x:Name="TxtFirstName" Margin="0,0,0,10"/>

        <TextBlock Text="Фамилия:"/>
        <TextBox x:Name="TxtLastName" Margin="0,0,0,10"/>

        <TextBlock Text="Страна:"/>
        <TextBox x:Name="TxtCountry" Margin="0,0,0,10"/>

        <TextBlock Text="Дата рождения:"/>
        <DatePicker x:Name="DpBirth" Margin="0,0,0,20"/>

        <Button Content="Сохранить" Click="BtnSave_Click" Height="30"/>
    </StackPanel>
</Window>